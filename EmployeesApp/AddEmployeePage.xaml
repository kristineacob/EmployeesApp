<Page
    x:Class="EmployeesApp.AddEmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EmployeesApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="150,150,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: " Width="100" Height="50" />
                <TextBox Name="empName" Height="35" Width="100" />

            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Title: " Width="100" Height="50" />
                <TextBox Name="empTitle" Height="35" Width="100" />
            </StackPanel>

            <Button Content="Save" Click="Button_Click" />

        </StackPanel>

    </Grid>
</Page>
